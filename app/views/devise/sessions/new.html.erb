<h3 class="page-title mb-2"><i class="fa-solid fa-right-to-bracket"></i> Log in</h3>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                label: 'E-mail',
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: true,
                label: 'Senha',
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, label: 'Lembrar', as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn btn-primary text-white mt-2 mb-2" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
